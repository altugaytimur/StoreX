@model Product


<div class="row">
    <div action="col-md-12">
        <div class="text-center">
            <h6 class="display-6">
                @Model.ProductName
            </h6>
            <img class="img-fluid shadow rounded-3 p-5 my-3" src="@Model?.ImageUrl" alt="@Model.ProductName" />

        </div>
    </div>
</div>

<div class="text-center">
    <h3> @Model.ProductName</h3>
    <p> @Model.Summary</p>
    <p class="text-danger">Fiyat: @Model.Price.ToString("c")</p>

    <div class="btn-group">
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">
            <i class="bi bi-house-door-fill"></i>
            Home
        </a>
       
        <a class="btn btn-outline-secondary rounded-0" asp-controller="Product" asp-action="Index">
            <i class="bi bi-list-ul"></i>
            Products
        </a>
        <form id="@Model.Id" asp-page="/cart" method="post">
            <input type="hidden" name="productId" asp-for="@Model.Id" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="btn btn-outline-secondary rounded-0">
                <i class="bi bi-cart-plus"></i>
                Add To Cart
            </button>
        </form>

    </div>

</div>
