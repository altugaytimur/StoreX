@model LoginModel

<div class="text-center my-5">
    <h6 class="display-6 text-secondary ">
        <i class="bi text-white bi-box-arrow-in-right bg-secondary p-2 rounded-circle"></i>
        <br />
       
        Login
    </h6>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl"/>
            <div class="form-group">
                <div class="form-floating my-3">
                    <input class="form-control" asp-for="Name" placeholder="name@example" />
                    <label asp-for="Name">Enter Your Name</label>
                </div>
            </div>

            <div class="form-group">
                <div class="form-floating my-3">
                    <input type="password" class="form-control" asp-for="Password" placeholder="name@example" />
                    <label asp-for="Password">Enter Your Password</label>
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                <div class="form-floating my-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i>
                        Login

                    </button>

                </div>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

