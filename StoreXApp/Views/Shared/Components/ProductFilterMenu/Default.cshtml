<div class="my-3">
    <h6 class="lead">
        <i class="bi bi-sort-down text-secondary"></i>
        Filters
    </h6>
</div>
<div class="my-3">
    <form method="get" asp-action="Index">
        <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])" />
        <div class="form-group my-2">
            <input class="form-control" name="SearchTerm" placeholder="Search" />
        </div>

        <div></div><div class="form-group my-2">
            <input class="form-control" name="MinPrice" placeholder="Min. Price" />
        </div>

         <div class="form-group my-2">
            <input class="form-control" name="Max" placeholder="Max.Price" />
        </div>

        <div class="form-group my-2">
            <button type="submit" class="btn btn-sm btn-primary">Filter</button>
        </div>
    </form>
</div>