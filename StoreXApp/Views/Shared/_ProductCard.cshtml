@model Product


<div class="col-sm-12 col-md-4  my-3">
    <div class="card" style="width: 18rem;">

        <div class="card-header text-center">
            @Model.ProductName
        </div>

        <img src="@Model?.ImageUrl" class="card-img-top" alt="..."/>

        <div class="card-body">
            @*h5 class="card-title">@Model?.ProductName</h5>*@
            <div class="card-text">
                <div class="text-danger text-center lead p-2 raunded-2">@Model.Price.ToString("C2")</div>
            </div>
            <p class="card-text">@Model?.Summary</p>
            <div class="d-flex justify-content-center">
                <div class="btn btn-group ">
                    <a class="btn btn-outline-success rounded-2" asp-controller="Product" asp-action="Get" asp-route-id="@Model?.Id">
                        <i class="bi bi-arrow-right"></i>
                    </a>
                    <form id="@Model?.Id" asp-page="/cart" method="post">
                            @*<input type="hidden" asp-for="Id" />*@
                        <input type="hidden" name="productId" asp-for="@Model.Id" />

                        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

                        <button type="submit" class="btn btn-outline-success mx-2">
                            <i class="bi bi-cart-plus"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
