@model IEnumerable<Product>
<div class="text-center">
    <div class="display-6">Products</div>
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="bi bi-bag-plus-fill"></i> Create 
        </a>
    </div>
    <table class="table table-dark table-striped-row  table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <img class="border border-light rounded" width="50"  height="50" src="@item.ImageUrl" alt="@item.ProductName"/>
                    </td>
                    <td>@item.ProductName</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-outline-warning" asp-action="Update" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash-fill"></i>
                                Delete
                            </a>

                            <a class="btn btn-outline-light" target="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@item.Id">
                                <i class="bi bi-search"></i>
                                Web
                            </a>
                        </div>
                    </td>
                </tr>
            }        
        </tbody>
    </table>
</div>
